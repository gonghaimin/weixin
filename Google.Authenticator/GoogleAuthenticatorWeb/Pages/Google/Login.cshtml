@page
@model GoogleAuthenticatorWeb.Pages.Google.LoginModel
@{
    ViewData["Title"] = "Login page";
}

<div class="text-center">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div class="form-group">
                    <label asp-for="User.Name" class="control-label"></label>
                    <input asp-for="User.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="User.PassWord" class="control-label"></label>
                    <input asp-for="User.PassWord" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" asp-page-handler="login" />
                </div>
            </form>
        </div>
    </div>
</div>